{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "noLib": false,
    "outDir": "../build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2015"
  },
  "include": [
    "./*.ts",
    "../../typings/index.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "atom": {
    "rewriteTsconfig": false
  }
}
