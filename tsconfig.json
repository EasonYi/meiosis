{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "isolatedModules": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitUseStrict": false,
        "noLib": false,
        "outDir": "dist/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5"
    },
    "files": [
        "src/actions.ts",
        "src/adapters.ts",
        "src/config.ts",
        "src/index.ts",
        "src/meiosis.ts",
        "src/merge.ts",
        "src/nextUpdate.ts",
        "src/postRender.ts",
        "src/ready.ts",
        "src/receiveUpdate.ts",
        "src/render.ts",
        "src/view.ts",
        "src/wire.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "formatCodeOptions": {
      "indentSize": 2,
      "tabSize": 2
    },
    "atom": {
        "rewriteTsconfig": false
    }
}
