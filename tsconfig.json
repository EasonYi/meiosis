{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "isolatedModules": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitUseStrict": false,
        "noLib": false,
        "outDir": "lib",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5"
    },
    "files": [
        "typings/index.d.ts",
        "src/actions.ts",
        "src/adapters.ts",
        "src/component.ts",
        "src/config.ts",
        "src/index.ts",
        "src/meiosis.ts",
        "src/nextAction.ts",
        "src/postRender.ts",
        "src/ready.ts",
        "src/receive.ts",
        "src/renderer.ts",
        "src/setup.ts",
        "src/view.ts",
        "src/wire.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "atom": {
        "rewriteTsconfig": false
    }
}
