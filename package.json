{
  "name": "meiosis",
  "version": "1.0.0",
  "description": "Meiosis manages the data flow of your web applications.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prestart": "tsc",
    "start": "NODE_ENV=prod webpack && NODE_ENV=dev webpack",
    "pretest": "npm start && tsc -p test/src",
    "test": "ava"
  },
  "ava": {
    "require": [
      "./test/build/setup-browser-env.js"
    ],
    "files": [
      "test/build/*-tests.js"
    ],
    "verbose": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foxdonut/meiosis.git"
  },
  "keywords": [
    "reactive"
  ],
  "author": "foxdonut",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foxdonut/meiosis/issues"
  },
  "homepage": "https://github.com/foxdonut/meiosis#readme",
  "devDependencies": {
    "@types/node": "^7.0.6",
    "ava": "^0.18.2",
    "browser-env": "^2.0.24",
    "es6-promise": "^4.1.0",
    "flyd": "^0.2.4",
    "mithril": "^1.0.1",
    "ts-loader": "^2.0.1",
    "typescript": "^2.2.1",
    "webpack": "^2.2.1"
  }
}
